            figcaption
              h3 We Can Be Heroes
            .thumb
              img(src="images/wcbh_thumb.jpg")

      section.border
        h2 Get in touch
        form#signup-form(action='http://formspree.io/mfpierre@gmail.com', method='post')
          .form-row
            input.floating-placeholder(name='name', type='text', placeholder='Name', required='')
          .form-row
            input.floating-placeholder(name='email', type='email', placeholder='Email', required='')
          .form-row
            input#message.floating-placeholder(name='message', placeholder='Message', required='')
          input(type='text', name="_gotcha", style="display:none")
          input.button(type='submit', value='Send message')
        #map

    footer#footer
      ul.icons
        li
          a.fa.fa-github(href='https://github.com/mfpierre', target="_blank")
        li
          a.fa.fa-twitter(href='https://twitter.com/mfpierre', target="_blank")
